<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="vertical"
    android:padding="2dp" >

    <TextView
        android:id="@+id/tvOrderNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/linearLayout1"
        android:layout_alignParentTop="true"
        android:layout_marginRight="4dp"
        android:focusable="false"
        android:gravity="center_vertical"
        android:text="1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageViewMenuPic"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignBottom="@+id/linearLayout1"
        android:layout_alignParentTop="true"
        android:layout_margin="4dp"
        android:layout_toRightOf="@+id/tvOrderNo"
        android:src="@drawable/ic_list_nofood" />

    <TextView
        android:id="@+id/tvOrderListMenuName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/linearLayout1"
        android:layout_toRightOf="@+id/imageViewMenuPic"
        android:focusable="false"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="2"
        android:text="Menu name"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvOrderListMenuPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/linearLayout1"
        android:layout_below="@+id/tvOrderListMenuName"
        android:layout_toRightOf="@+id/imageViewMenuPic"
        android:focusable="false"
        android:text="1"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tvOrderListMenuComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="2dp"
        android:focusable="false"
        android:textSize="10sp"
        android:textStyle="italic" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/btnOrderMinus"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/light_grey_button"
            android:focusable="false"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:padding="0dp"
            android:text="@string/btn_order_minus"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvOrderListMenuQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/white_layer"
            android:focusable="false"
            android:gravity="center"
            android:minWidth="24dp"
            android:padding="4dp"
            android:text="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnOrderPlus"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/light_grey_button"
            android:focusable="false"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:padding="0dp"
            android:text="@string/btn_order_plus"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnOrderComment"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/light_grey_button"
            android:drawableLeft="@drawable/ic_action_modify_light"
            android:focusable="false"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingLeft="0dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Button
            android:id="@+id/buttonOrderEdit"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/light_grey_button"
            android:drawableLeft="@drawable/ic_action_edit_light"
            android:focusable="false"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingLeft="0dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Button
            android:id="@+id/btnOrderDelete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/light_grey_button"
            android:drawableLeft="@drawable/ic_action_delete_light"
            android:focusable="false"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingLeft="0dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>

</RelativeLayout>