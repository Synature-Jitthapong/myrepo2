<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="4dp" >

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false" />

    <TextView
        android:id="@+id/tvMenuCommentName"
        style="@style/text_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="Menu comment name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tvMenuCommentPrice"
        style="@style/text_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btnMenuCommentMinus"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/light_grey_button"
        android:focusable="false"
        android:text="@string/btn_order_minus"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tvMenuCommentQty"
        style="@style/text_medium"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/radius_bg"
        android:gravity="center"
        android:minWidth="48dp"
        android:padding="4dp"
        android:text="1"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btnMenuCommentPlus"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/light_grey_button"
        android:focusable="false"
        android:text="@string/btn_order_plus"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</LinearLayout>