<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="4dp" >

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnMenuCommentMinus"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:clickable="false"
        android:focusable="false" />

    <TextView
        android:id="@+id/tvMenuCommentName"
        style="@style/text_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btnMenuCommentMinus"
        android:layout_toRightOf="@+id/checkBox1"
        android:gravity="center_vertical"
        android:text="Menu comment name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btnMenuCommentPlus"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:background="@drawable/light_grey_button"
        android:focusable="false"
        android:text="@string/btn_order_plus"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tvMenuCommentQty"
        style="@style/text_medium"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignBottom="@+id/btnMenuCommentPlus"
        android:layout_alignTop="@+id/btnMenuCommentPlus"
        android:layout_toLeftOf="@+id/btnMenuCommentPlus"
        android:background="@drawable/radius_bg"
        android:gravity="center"
        android:minWidth="48dp"
        android:padding="4dp"
        android:text="1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="32sp" />

    <Button
        android:id="@+id/btnMenuCommentMinus"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:layout_toLeftOf="@+id/tvMenuCommentQty"
        android:background="@drawable/light_grey_button"
        android:focusable="false"
        android:text="@string/btn_order_minus"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tvMenuCommentPrice"
        style="@style/text_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMenuCommentName"
        android:layout_toRightOf="@+id/checkBox1"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>