<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
     <item android:state_pressed="true" >
    <shape>
      <solid android:color="#00C9FF"/>
		<stroke android:width="1px" 
		    android:color="#159DEB" />
		<padding
			android:left="8dp"
			android:top="8dp"
			android:right="8dp"
			android:bottom="8dp"/>
		<corners
			android:bottomLeftRadius="4dp"
			android:topLeftRadius="4dp"/>
		<gradient
			android:angle="270"
			android:startColor="#4591BD"
			android:centerColor="#4591BD"
			android:endColor="#00C9FF"
			android:type="linear"/>
    </shape>
  </item>
  <item android:state_selected="true" >
     <shape>
      <solid android:color="#00C9FF"/>
		<stroke android:width="1px" 
		    android:color="#159DEB" />
		<padding
			android:left="8dp"
			android:top="8dp"
			android:right="8dp"
			android:bottom="8dp"/>
		<corners
			android:bottomLeftRadius="4dp"
			android:topLeftRadius="4dp"/>
		<gradient
			android:angle="270"
			android:startColor="#4591BD"
			android:centerColor="#4591BD"
			android:endColor="#00C9FF"
			android:type="linear"/>
    </shape>
  </item>
   <item android:state_enabled="false" >
    <shape>
      <solid
          android:color="#D3D3D3" />
      <stroke
          android:width="1dp"/>
      <corners
          android:topLeftRadius="4dp"
          android:bottomLeftRadius="4dp"/>
      <padding
          android:left="8dp"
          android:top="8dp"
          android:right="8dp"
          android:bottom="8dp" />
    </shape>
  </item>
  <item>
    <shape>
        <solid android:color="#00C9FF"/>
		<stroke android:width="1px" 
		    android:color="#159DEB" />
		<padding
			android:left="8dp"
			android:top="8dp"
			android:right="8dp"
			android:bottom="8dp"/>
		<corners
			android:bottomLeftRadius="4dp"
			android:topLeftRadius="4dp"/>
		<gradient
			android:angle="90"
			android:startColor="#4591BD"
			android:centerColor="#4591BD"
			android:endColor="#00C9FF"
			android:type="linear"/>
    </shape>
  </item>

</selector>